<p id="notice"><%= notice %></p>

<h1>Listing Excercises</h1>


<div class="table_style_master">

    <table>
      <thead>
        <tr>
          <th>Cal burn</th>
          <th>Burn date</th>
          <th>Exercise Type</th>
          <th colspan="3">Table Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @excercises.each do |excercise| %>
          <tr>
            <td><%= excercise.cal_burn %></td>
            <td><%= excercise.burn_date %></td>
            <td> <%= excercise.exercise_type_name %> </td>
            <td><%= link_to 'Show', excercise %></td>
            <td><%= link_to 'Edit', edit_excercise_path(excercise) %></td>
            <td><%= link_to 'Destroy', excercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>

<br>


<div class="new_item">
<%= link_to 'New Excercise', new_excercise_path %>
</div>
