<p id="notice"><%= notice %></p>

<h1>Listing Steps</h1>

<div class="table_style_master">
  <table>
    <thead>
      <tr>
        <th>Steps taken</th>
        <th>Step date</th>
        <th colspan="3">Table Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @steps.each do |step| %>
        <tr>
          <td><%= step.steps_taken %></td>
          <td><%= step.step_date %></td>
          <td><%= link_to 'Show', step %></td>
          <td><%= link_to 'Edit', edit_step_path(step) %></td>
          <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


<div class="new_item">
<%= link_to 'New Step', new_step_path %>
</div>
